
# Dockerfile.pptx_worker reestructurado para AWS y Selenium
FROM python:3.10-slim

# 1. Instalar dependencias del sistema
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    gnupg \
    wget \
    unzip \
    build-essential \
    libglib2.0-0 \
    libnss3 \
    libgdk-pixbuf-xlib-2.0-0 \
    libx11-xcb1 \
    libxcomposite1 \
    libxcursor1 \
    libxdamage1 \
    libxext6 \
    libxi6 \
    libxrandr2 \
    libxrender1 \
    libxss1 \
    libxtst6 \
    ca-certificates \
    fonts-liberation \
    chromium \
    chromium-driver \
    && rm -rf /var/lib/apt/lists/*

# 2. Instalar driver ODBC 18 de Microsoft para SQL Server (Debian 12+)
RUN curl -sSL https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor > /usr/share/keyrings/microsoft-prod.gpg && \
    echo "deb [arch=amd64 signed-by=/usr/share/keyrings/microsoft-prod.gpg] https://packages.microsoft.com/debian/12/prod bookworm main" > /etc/apt/sources.list.d/mssql-release.list && \
    apt-get update && ACCEPT_EULA=Y apt-get install -y msodbcsql18 mssql-tools unixodbc unixodbc-dev && \
    apt-get clean -y

# 3. Variables de entorno para Selenium y ODBC
ENV CHROME_BIN=/usr/bin/chromium
ENV CHROMEDRIVER_PATH=/usr/bin/chromedriver
ENV ODBCINSTINI=/etc/odbcinst.ini

# 4. Crear directorio de trabajo
WORKDIR /app

# 5. Copiar dependencias de Python e instalarlas
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 6. Copiar el resto del c√≥digo
COPY . .

# 7. Comando por defecto
CMD ["python", "worker.py"]
